        #{state,jdbcType=BIT},
      </if>
      <if test="ctime != null" >
        #{ctime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.hang.common.domain.FoFunction" >
    update fo_function
    <set >
      <if test="fid != null" >
        fid = #{fid,jdbcType=INTEGER},
      </if>
      <if test="fname != null" >
        fname = #{fname,jdbcType=VARCHAR},
      </if>
      <if test="furi != null" >
        furi = #{furi,jdbcType=VARCHAR},
      </if>
      <if test="sort != null" >
        sort = #{sort,jdbcType=INTEGER},
      </if>
      <if test="candel != null" >
        candel = #{candel,jdbcType=BIT},
      </if>
      <if test="state != null" >
        state = #{state,jdbcType=BIT},
      </if>
      <if test="ctime != null" >
        ctime = #{ctime,jdbcType=TIMESTAMP},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.hang.common.domain.FoFunction" >
    update fo_function
    set fid = #{fid,jdbcType=INTEGER},
      fname = #{fname,jdbcType=VARCHAR},
      furi = #{furi,jdbcType=VARCHAR},
      sort = #{sort,jdbcType=INTEGER},
      candel = #{candel,jdbcType=BIT},
      state = #{state,jdbcType=BIT},
      ctime = #{ctime,jdbcType=TIMESTAMP}
    where id = #{id,jdbcType=INTEGER}
